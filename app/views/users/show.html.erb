<%= render "shared/header" %>
<div class="main">
  <div class="user-info">
    <div class='user-img-content'>
        <%= image_tag @user.image.variant(resize: '100x100'), class: "user-img" %>
    </div>
    <div class="user-nickname">
      ニックネーム：<%= @user.nickname %>
    </div>
    <div class="user-sports">
      スポーツカテゴリー：<%= @user.sports.name %>
    </div>
    <div class="user-active-area">
      活動地域：<%= @user.active_area.name %>
    </div>
    <div class="user-active-day">
      活動曜日：<%= @user.active_day.name %>
    </div>
    <div class="user-active-time">
      活動時間帯：<%= @user.active_time.name %>
    </div>
    <% if @user.achievement %>
    <div class="user-achievement">
      過去の実績：<%= @user.achievement.name %>
    </div>
    <% end %>
    <% if @user.achievement_content %>
    <div class="user-achievement-content">
      過去の実績の補足：<%= @user.achievement_content %>
    </div>
    <% end %>
    <% if @user.profile %>
    <div class="user-profile">
      プロフィール：<%= @user.profile %>
    </div>
    <% end %>
  </div>

  <% if user_signed_in? && @user.id == current_user.id %>
    <% if @user.card %>
      <%= link_to "登録しているクレジットカード情報を確認する", card_path(@user) %>
    <% else %>
      <%= link_to "クレジットカードを登録する", new_card_path %>
    <% end %>
  <% end %>

  

  <div class="team-contents">
    <h2 class="title"><%= @user.nickname %> さんが応募しているチーム</h2>
    <% if @self_applies %>
    <ul class="team-lists">
      <% @self_applies.each do |team_apply| %>
      <% user = User.find_by(id: team_apply.user_id) %>
      <% team = Team.find_by(id: team_apply.team_id) %>
      <% approve = Approve.find_by(user_id: user.id, team_id: team.id) %>
      <li class="list">
        <div class="applied-team-name">
          <%= link_to team.team_name, team_path(team.id) %>へ応募中
        </div>
        <div class='user-img-content'>
          <%= image_tag team.image.variant(resize: '250x250'), class: "user-img" %>
        </div>
        <div class="user-name">
          チーム管理者：<%= link_to team.user.nickname, user_path(user.id) %>
        </div>
        <% if approve %>
        <%#= link_to "参加を却下する", team_approfe_path(user_id: apply.user_id, team_id: apply.team_id), method: :delete %>
        <h1>SPOTCH!!</h1>
        <% else %>
        <h1>申請中</h1>
        <% end %>
        
      </li>
      <% end %>
    </ul>
    <% else %>
      現在応募はありません
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>
<%= render "shared/header" %>
<div class="main">

<div class="team-contents">
    <h2 class="title"><%= current_user.nickname %> さんのお気に入りチーム</h2>
    <ul class="team-lists">
      <% @myfavorites.each do |myfavorite| %>
      <% team = Team.find_by(id: myfavorite.team_id) %>
      <li class="list">
        <div class='team-img-content'>
          <%= image_tag team.image.variant(resize: '250x250'), class: "team-img" %>
        </div>
        <div class="team-name">
          <%= link_to team.team_name, team_path(team.id) %>
        </div>
        <div class="team-name">
          管理者<%= link_to team.user.nickname, user_path(team.user.id) %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="team-contents">
    <h2 class="title"><%= current_user.nickname %> さんのチームをお気に入りした人</h2>
    <ul class="team-lists">
      <% @favorited.each do |favorited| %>
      <% user = User.find_by(id: favorited.user_id) %>
      <% team = Team.find_by(id: favorited.team_id) %>
      <li class="list">
        <div class="team-name">
          <%= link_to team.team_name, team_path(team.id) %>がお気に入りされています
        </div>
        <div class='team-img-content'>
          <%= image_tag user.image.variant(resize: '250x250'), class: "team-img" %>
        </div>
        <div class="team-name">
          <%= link_to user.nickname, user_path(user.id) %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<%= render "shared/footer" %>
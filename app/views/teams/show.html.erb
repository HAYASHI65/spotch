<%= render "shared/header" %>
<div class="main">
  <div class="team-show">
    <div class="team-info">
      <% if @team.favorited?(current_user) %>
      <%= link_to team_favorite_path(@team.id), method: :delete do %>
      <span class="faa-parent animated-hover" style="color:red;"><i class="fas fa-heart faa-tada fa-2x"></i></span>
      <% end %>
      <% else %>
      <%= link_to team_favorites_path(@team.id), method: :post do %>
      <span class="faa-parent animated-hover" style="color:gray;"><i class="fas fa-heart faa-tada fa-2x"></i></i></span>
      <% end %>
      <% end %>
      <%= @team.favorites.count %>
      <div class="team-apply">
        <% if @team.applied?(current_user) %>
        <%= link_to "このチームへの応募を取り消す", team_apply_path(@team.id), method: :delete %>
        <% else %>
        <%= link_to "このチームに応募する", team_applies_path(@team.id), method: :post %>
        <% end %>
      </div>
      <div class="team-donation">
        <%= link_to "このチームに寄付する", new_team_donation_path(@team.id) %>
      </div>

      <div class='item-img-content'>
        <%= image_tag @team.image.variant(resize: '250x250'), class: "item-img" %>
      </div>

      <div class="team-name">
        <%= @team.team_name %>
      </div>
      <div class="team-sports">
        <%= @team.sports.name %>
      </div>
      <div class="team-group">
        <%= @team.group.name %>
      </div>
      <div class="team-active-area">
        <%= @team.active_area.name %>
      </div>
    </div>
    <div class="user-info">
      <div class="user-nickname">
        チーム管理者<%= link_to @team.user.nickname, user_path(@team.user.id) %>
      </div>
    </div>
    <%= link_to "編集", edit_team_path(@team.id) %>
    <%= link_to "削除", team_path(@team.id), method: :delete %>

    <div class="container">
      <% if user_signed_in? %>
      <%= form_with(model: [@team, @comment], local: true) do |form| %>
      <%= form.text_area :text, placeholder: "ここにコメントを入力してください", rows: "2" %>
      <%= form.submit "送信" %>
      <% end %>
      <% else %>
      <strong>
        <p>コメントの投稿には新規登録/ログインが必要です</p>
      </strong>
      <% end %>
      <div class="comments">
        <h4>＜コメント一覧＞</h4>
        <% @comments.each do |comment| %>
        <p>
          <strong><%= link_to comment.user.nickname, "#" %>：</strong>
          <%= comment.text %>
        </p>
        <% end %>
      </div>
    </div>
  </div>


</div>
<%= render "shared/footer" %>